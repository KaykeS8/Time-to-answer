<h1><%= t('messages.listing', model: @subjects.model_name.human(count: 2))%></h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= translate_attribute(@subjects, :id)%></th>
        <th><%= translate_attribute(@subjects, :description)%></th>
        <th>
          <%= link_to new_admins_backoffice_subject_path, class: 'btn btn-success  btn-sm rounded-circle' do%>
            <i class="fa fa-plus"></i>
        <% end %>
          <%= link_to admins_backoffice_subjects_path(format: :pdf), class: 'btn btn-danger  btn-sm rounded-circle' do%>
            <i class="fa fa-file-pdf"></i>
        <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject|%>
        <tr>
          <td><%= subject.id%></td>
          <td><%= subject.description%></td>
          <td>
            <%= link_to edit_admins_backoffice_subject_path(subject), class: 'btn btn-primary btn-circle btn-sm' do %>
              <i class="fa fa-edit"></i>
            <%end%>

            <%= link_to admins_backoffice_subject_path(subject), data: {method: :delete, confirm: t('messages.confirm_with', item: subject.description.truncate(15))}, class: 'btn btn-danger btn-circle btn-sm' do %>
              <i class="fa fa-minus"></i>
            <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @subjects%>
  </div>
</div>