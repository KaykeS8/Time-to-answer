<%= render 'shared/header'%>
<div class="container px-5">
  
  <h2 class="my-4">
    <%= msg_header %>
  </h2>

  <% @questions.each do |question|%>
    <%= form_with url: site_answer_path do |form|%>
      <div class="mb-5 border rounded">
        <div class="bg-dark p-3 mb-2 text-white-50">
          <span class="badge bg-info mb-2">
            <%= link_to question.subject.description, site_search_subject_path(question.subject_id, question.subject.description),class: 'text-dark', style: 'text-decoration:none;' %>
          </span>
          <p><%= question.description%></p>
        </div>
        <div class="p-3">
          <% question.answers.each do |answer| %>
              <div class="radio">
                <label>
                  <%= radio_button_tag 'answer_id', answer.id%>
                  <%= answer.description%>
                </label>
              </div>
            <% end %>
            <div class="my-2">
              <%= form.submit 'responder', class: 'btn btn-sm btn-primary', id: "submit_#{question.id}"%>
            </div>
            <div id="answer_<%= question.id%>"></div>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="d-flex justify-content-center">
    <%= paginate @questions%>
  </div>
</div>